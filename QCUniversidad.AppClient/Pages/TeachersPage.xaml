<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:QCUniversidad.AppClient.ViewModels"
             x:Class="QCUniversidad.AppClient.TeachersPage"
             x:DataType="viewmodel:TeachersViewModel"
             Title="TeachersPage">
    <VerticalStackLayout>
        <ActivityIndicator IsRunning="{Binding Loading}"
                           IsVisible="{Binding Loading}"
                           Margin="100, 100"
                           HorizontalOptions="Center" />
        <Label 
            Text="{Binding ResultContent}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button Text="Cargar datos"
                Command="{Binding LoadWeatherCommand}" />
    </VerticalStackLayout>
</ContentPage>