<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:QCUniversidad.AppClient.ViewModels"
             x:Class="QCUniversidad.AppClient.AddEditFacultyPage"
             x:DataType="viewmodel:AddEditFacultyPageViewModel"
             Title="{Binding Title}"
             Shell.PresentationMode="ModalAnimated">
    <VerticalStackLayout Padding="10" 
                         Spacing="10"
                         VerticalOptions="Center">
        <ActivityIndicator IsVisible="{Binding Loading}"
                           IsRunning="{Binding Loading}"
                           HorizontalOptions="Center" />

        <Label Text="{Binding Title}"
                   Style="{StaticResource Title}"
                   Margin="0,10" />

        <Entry Placeholder="Nombre"
               Text="{Binding Name}" />
        <Entry Placeholder="Sede"
               Text="{Binding Campus}" />
        
        <Button Text="Guardar cambios"
                Command="{Binding SaveChangesCommand}" />
        <Button Text="Regresar"
                Command="{Binding GoBackCommand}" />
    </VerticalStackLayout>
</ContentPage>