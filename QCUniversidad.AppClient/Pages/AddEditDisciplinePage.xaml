<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:QCUniversidad.AppClient.ViewModels"
             x:Class="QCUniversidad.AppClient.Pages.AddEditDisciplinePage"
             x:DataType="viewmodel:AddEditDisciplinePageViewModel"
             Title="{Binding Title}"
             Shell.PresentationMode="ModalAnimated">
    
    <VerticalStackLayout VerticalOptions="Center"
                         Spacing="15"
                         Padding="15">

        <Label Text="{Binding Title, FallbackValue='Crear o editar departamento'}"
               FontSize="Title"
               TextColor="{StaticResource Primary}"/>

        <ActivityIndicator IsRunning="{Binding Loading}"
                           IsVisible="{Binding Loading}" />

        <Entry Placeholder="Nombre"
               Text="{Binding Name}" />

        <Entry Placeholder="DescripciÃ³n"
               Text="{Binding Description}" />

        <Button Text="Guardar cambios"
                ImageSource="save_icon.png"
                Command="{Binding SaveChangesCommand}" />

        <Button Text="Regresar"
                Command="{Binding GoBackCommand}" />

    </VerticalStackLayout>
    
</ContentPage>