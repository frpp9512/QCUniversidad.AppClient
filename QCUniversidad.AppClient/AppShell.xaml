<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="QCUniversidad.AppClient.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:QCUniversidad.AppClient"
    xmlns:pages="clr-namespace:QCUniversidad.AppClient.Pages"
    xmlns:viewmodel="clr-namespace:QCUniversidad.AppClient.ViewModels"
    x:DataType="viewmodel:ShellViewModel"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent Title="Inicio"
                  ContentTemplate="{DataTemplate local:MainPage}"
                  Route="MainPage" />

    <FlyoutItem Title="Gestión"
                FlyoutDisplayOptions="AsMultipleItems"
                IsVisible="{Binding UserIsLogged}">
        <ShellContent Title="Facultades" ContentTemplate="{DataTemplate local:FacultiesPage}"
                      Route="FacultiesPage" />
        <ShellContent Title="Disciplinas" ContentTemplate="{DataTemplate pages:DisciplinesPage}"
                      Route="DisciplinesPage" />
        <ShellContent Title="Profesores" ContentTemplate="{DataTemplate local:TeachersPage}"
                      Route="TeachersPage" />
    </FlyoutItem>



    <MenuItem Text="{Binding LoginLogoutText}"
              Command="{Binding LoginLogoutCommand}"
              IsEnabled="{Binding UserLoggingInOut}"
              />



