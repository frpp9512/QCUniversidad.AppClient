#See https://aka.ms/customizecontainer to learn how to customize your debug container and how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
USER app
WORKDIR /app

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src
COPY ["QCUniversidad.Api/QCUniversidad.Api.csproj", "QCUniversidad.Api/"]
COPY ["QCUniversidad.Api.Shared/QCUniversidad.Api.Shared.csproj", "QCUniversidad.Api.Shared/"]
RUN dotnet restore "./QCUniversidad.Api/QCUniversidad.Api.csproj"
COPY . .
WORKDIR "/src/QCUniversidad.Api"
RUN dotnet build "./QCUniversidad.Api.csproj" -c $BUILD_CONFIGURATION -o /app/build

FROM build AS bundle
WORKDIR /bundle
RUN dotnet tool install --global dotnet-ef
ENV PATH="$PATH:/root/.dotnet/tools"
RUN dotnet ef migrations bundle --verbose --self-contained -r linux-x64 -o /bundle/efbundle --project /src/QCUniversidad.Api/QCUniversidad.Api.csproj

FROM base AS final
WORKDIR /app
COPY --from=bundle /bundle/efbundle /app/efbundle

CMD [ "./efbundle", "-v", "--connection", "Server=postgres_db;Port=5432;Database=QCUData;User Id=postgres;Password=mr.hyde" ]