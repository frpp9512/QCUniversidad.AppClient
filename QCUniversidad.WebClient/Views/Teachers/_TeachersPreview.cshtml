@using QCUniversidad.Api.Shared.Extensions
@model IList<TeacherModel>

@if (Model.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Nombre completo</th>
                    <th>Carné de identidad</th>
                    <th>Tipo de contrato</th>
                    <th>Cargo</th>
                    <th>Categoría docente</th>
                    <th>Correo electrónico</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var teacher in Model)
                {
                    <tr>
                        <td>@teacher.Fullname</td>
                        <td>@teacher.PersonalId</td>
                        <td>
                            @teacher.ContractType.GetEnumDisplayNameValue()
                            @if (teacher.ContractType != QCUniversidad.Api.Shared.Enums.TeacherContractType.FullTime)
                            {
                                <span>(@(teacher.SpecificTimeFund)h)</span>
                            }
                        </td>
                        <td>@teacher.Position</td>
                        <td>@teacher.Category.GetEnumDisplayNameValue()</td>
                        <td>@teacher.Email</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<div>
    <h5 class="text-danger">Error leyendo archivo de datos.</h5>
</div>