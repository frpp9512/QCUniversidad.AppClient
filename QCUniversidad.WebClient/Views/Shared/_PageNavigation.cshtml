@model INavigationListViewModel

<nav aria-label="Navegación" class="text-center">
    @if (Model.PagesCount > 1)
    {
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.FirstPage ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="1" )><span class="fa fa-arrow-left" /></a>
            </li>
            <li class="page-item @(Model.FirstPage ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)"><span class="fa fa-arrow-alt-circle-left" /></a>
            </li>
            @for (int i = 0; i < Model.PagesCount; i++)
            {
                <li class="page-item @((i + 1) == Model.CurrentPage ? "disabled" : "")"><a asp-action="Index" asp-route-page="@(i + 1)" class="page-link">@(i + 1)</a></li>
            }
            <li class="page-item @(Model.LastPage ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)" )><span class="fa fa-arrow-alt-circle-right" /></a>
            </li>
            <li class="page-item @(Model.LastPage ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@Model.PagesCount" )><span class="fa fa-arrow-right" /></a>
            </li>
        </ul>
    }
    <small class="text-muted">
        <span class="fa fa-pager"></span> Página @Model.CurrentPage de @Model.PagesCount | <span class="fa fa-users"></span> Mostrando @Model.ItemsCount de @Model.TotalItems
    </small>
</nav>