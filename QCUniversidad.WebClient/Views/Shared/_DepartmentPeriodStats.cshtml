@using System.Globalization;
@model IList<StatisticItemModel>

<h5 class="mt-3">Estadísticas del departamento en el período</h5>

<table class="table table-hover" id="stats-table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>UM</th>
            <th>Valor</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Mu
                </td>
                <td align="right">
                    @item.Value.ToString("F", CultureInfo.InvariantCulture)
                </td>
            </tr>
        }
    </tbody>
</table>