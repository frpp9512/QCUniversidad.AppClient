@model IList<CareerModel>

<h4 class="mt-3 mb-3">Carreras de la facultad</h4>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-hover w-100" id="careers-table">
            <thead>
                <tr>
                    <th width="5%"></th>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td align="center">
                            @if (item.PostgraduateCourse)
                            {
                                <span class="fa fa-user-graduate text-success" data-bs-toggle="tooltip" data-bs-html="true" title="<div><small><span class='fa fa-info-circle'></span> Postgrado</small></div> <div>Esta carrera es un postgrado</div>"></span>
                            }
                        </td>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Description
                        </td>
                        <td>
                            <a asp-action="Details" asp-controller="Careers" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                                <span class="fa fa-info-circle"></span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <partial name="_NoItems" model="@("No existen carreras en la facultad.")" />
}