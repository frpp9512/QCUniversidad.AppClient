@model NavigationListViewModel<TeachingPlanModel>

@{
    ViewData["Title"] = "Planificación";
}

<h1>Planificación docente</h1>

<a asp-action="Create" class="btn btn-success"><span class="fa fa-plus"></span> Crear plan</a>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Año escolar</th>
            <th>Período</th>
            <th>Elementos</th>
            <th>Total horas</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Period?.SchoolYear?.Denomination</td>
                <td>@item.Period?.OrderNumber - @item.Period?.Starts.ToString("dd-MM-yyyy") <span class="fa fa-arrow-right"></span> @item.Period?.Ends.ToString("dd-MM-yyyy")</td>
                <td>@item.ItemsCount</td>
                <td>@item.TotalHours</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><span class="fa fa-pencil"></span></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><span class="fa fa-trash"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>