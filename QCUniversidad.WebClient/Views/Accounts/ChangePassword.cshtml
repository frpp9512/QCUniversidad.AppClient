@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Cambiar contraseñas";
}

<h1>Cambiar contraseña</h1>
<h4>Rellene el formulario para relizar el cambio de contraseña.</h4>
<hr />
<form asp-action="ChangePassword" enctype="multipart/form-data">
    <div class="row justify-content-center">
        <div class="col col-lg-5 col-md-6 col-12">
            <div>
                <h6>Usuario: @Model.Fullname</h6>
            </div>
            <div class="form-group">
                @if (Model.AllowChangeEmail)
                {
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                }
                else
                {
                    <input asp-for="Email" type="hidden" />
                }
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div style="display:flex; flex-direction: row-reverse; justify-content:space-between;">
                <input asp-for="Id" type="hidden" />
                <input asp-for="Fullname" type="hidden" />
                <button type="submit" class="btn btn-info">
                    <span class="fa fa-asterisk"></span> Cambiar contraseña
                </button>
                <a class="btn btn-link" href="/account"><span class="fa fa-arrow-alt-circle-left"></span> Regresar al listado</a>
            </div>
        </div>
    </div>
</form>