@model IList<DisciplineModel>

<h4 class="mt-3 mb-3">Disciplinas del departamento</h4>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-hover w-100" id="disciplines-table">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th width="10%">Asignaturas</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="@item.Id">
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Description))
                            {
                                @item.Description
                            }
                            else
                            {
                                <i class="text-muted">Sin descripción</i>
                            }
                        </td>
                        <td align="right">
                            @item.SubjectsCount
                        </td>
                        <td align="right">
                            <a asp-action="Details" asp-controller="Disciplines" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info"><span class="fa fa-info-circle"></span></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <partial name="_NoItems" model="@("No existen disciplinas en el departamento")" />
}