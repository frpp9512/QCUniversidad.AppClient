@model NavigationListViewModel<SchoolYearModel>

@{
    ViewData["Title"] = "Años escolares";
    var items = Model.Items;
    bool schoolyearCreated = (bool?)TempData["schoolyear-created"] ?? false;
    bool schoolyearEdited = (bool?)TempData["schoolyear-edited"] ?? false;
    bool schoolyearDeleted = (bool?)TempData["schoolyear-deleted"] ?? false;
}

<div class="d-flex flex-column flex-sm-row justify-content-between align-items-center mb-4">
    <div class="d-flex flex-column flex-sm-row gap-2 align-items-center text-center text-sm-start justify-content-between">
        <div class="d-flex flex-column">
            <div class="banner-title">Años escolares</div>
            <div class="banner-subtitle">Listado de años escolares generales del sistema</div>
        </div>
    </div>
    <div>
        <a asp-action="Create" class="btn btn-success"><span class="fa fa-plus-circle"></span> Crear nuevo</a>
    </div>
</div>

@if (schoolyearCreated)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        <strong><span class="fa fa-info-circle"></span> Año escolar creado</strong> Se ha creado un nuevo año escolar satisfactoriamente.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (schoolyearEdited)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        <strong><span class="fa fa-pencil-square"></span> Año escolar actualizado</strong> Se ha actualizado los datos del año escolar satisfactoriamente.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (schoolyearDeleted)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        <strong><span class="fa fa-trash-can"></span> Año escolar eliminado</strong> Se ha eliminado un año escolar satisfactoriamente.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model.ItemsCount > 0)
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th></th>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Descripción
                    </th>
                    <th>
                        Cantidad de cursos
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in items)
                {
                    <tr id="@item.Id">
                        <td>
                            @if (item.Current)
                            {
                                <span class="fa fa-check text-success"></span>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Description))
                            {
                                @item.Description
                            }
                            else
                            {
                                <i class="text-muted">No tiene descripción</i>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CoursesCount)
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                                <span class="fa fa-info" />
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">
                                <span class="fa fa-edit" />
                            </a>
                            <button class="btn btn-sm btn-outline-danger" onclick="RiseDeleteModal('@item.Id')">
                                <span class="fa fa-trash" />
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Navigation -->

    <partial name="_PageNavigation" model="Model" />

    <!-- Modals -->

    <div class="modal fade" id="deleteSchoolYearModal" tabindex="-1" aria-labelledby="deleteSchoolYearModalTitle" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteSchoolYearModalTitle"><span class="fa fa-trash"></span> Eliminar año escolar</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div id="modal-delete-content" class="modal-body">
                    ¿Esta seguro que desea eliminar el año escolar?
                </div>
                <div id="deleteModalFooter" class="modal-footer">
                    <div id="deleteModalLoadingSpinner" class="spinner-border text-primary" role="status" hidden>
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <button id="modal-delete-primarybutton" type="button" class="btn btn-danger"><span class="fa fa-trash-can"></span> Eliminar</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><span class="fa fa-ban"></span> Cancelar</button>
                </div>
            </div>
        </div>
    </div>


    @section Scripts {
        <script src="~/js/schoolyear-index.js"></script>
    }
}
else
{
    <partial name="_NoItems" model="@("No existen años escolares registrados en el sistema.")" />
}